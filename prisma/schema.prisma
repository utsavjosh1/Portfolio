generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Project {
  id           Int      @id @default(autoincrement())
  title        String
  description  String   @db.Text
  imageUrl     String
  github       String
  demo         String?
  technologies String[]
  createdAt    String
  updatedAt    String
  pinned       Boolean  @default(false)
  slug         String   @unique
  content      String?  @db.Text
}

